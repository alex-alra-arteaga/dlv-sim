{
  "compilerOptions": {
    "module": "ES2022",
    "sourceMap": true,
    "declaration": true,
    "target": "ES2022",
    "rootDir": ".",
    "moduleResolution": "Node10",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
