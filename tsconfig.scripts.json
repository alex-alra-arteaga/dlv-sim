{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["scripts/**/*.ts", "src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}